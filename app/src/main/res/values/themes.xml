<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lotty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="buttonStyle">@style/Theme.Lotty.Button</item>
    </style>

    <style name="Theme.Lotty.Button" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

    </style>

    <style name="Theme.Lotty.Splash" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="postSplashScreenTheme">@style/Theme.Lotty</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="windowSplashScreenBackground">@color/white</item>
    </style>

    <style name="Theme.Lotty.TextView.Medium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Lotty.TextView.Regular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Lotty.TextView.SemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Lotty.TextView.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Lotty.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowBackground">#33000000</item>
    </style>

    <style name="Theme.Lotty.SlideDialog" parent="Theme.Lotty.Dialog">
        <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
    </style>

    <style name="SlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right_dialog</item>
    </style>

    <style name="Theme.Lotty.Layout">
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.Lotty.Button.3D" parent="Theme.AppCompat">
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/bg_white_rounded_10dp</item>
    </style>

    <style name="Theme.Lotty.ImageView.Basic" parent="Theme.AppCompat">
        <item name="android:tint">@color/black</item>
    </style>
    
    <style name="Theme.Lotty.TextView.Button" parent="Theme.Lotty.TextView.SemiBold">
        <item name="android:textColor">@color/G900</item>
    </style>

    <style name="Theme.Lotty.ImageButton.BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_back_24x24</item>
        <item name="android:background">@drawable/bg_white_oval_ripple</item>
    </style>

    <style name="Theme.Lotty.ImageButton.TextClear" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_clear_16x16</item>
        <item name="android:tint">#999999</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="Theme.Lottiy.EditText.Search" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/G900</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:drawableTint">#999999</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/bg_g100_rounded_10dp</item>
        <item name="android:drawableStart">@drawable/ic_search_12x12</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:lines">1</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>