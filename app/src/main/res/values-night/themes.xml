<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lotty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/B500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/DarkBG</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="buttonStyle">@style/Theme.Lotty.Button</item>
        <item name="android:toolbarStyle">@style/Theme.Lotty.Toolbar</item>
    </style>

    <style name="Theme.Lotty.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="background">@color/DarkBG</item>
    </style>

    <style name="Theme.Lotty.Button" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Theme.Lotty.Splash" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/DarkBG</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="postSplashScreenTheme">@style/Theme.Lotty</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset_dark</item>
        <item name="windowSplashScreenBackground">@color/DarkBG</item>
    </style>

    <style name="Theme.Lotty.TextView.Medium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Lotty.TextView.Regular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Lotty.TextView.SemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Lotty.TextView.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Lotty.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@color/DarkBG</item>
        <item name="android:toolbarStyle">@style/Theme.Lotty.Toolbar</item>
        <item name="android:windowBackground">#33000000</item>
    </style>

    <style name="Theme.Lotty.SlideDialog" parent="Theme.Lotty.Dialog">
        <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
    </style>

    <style name="SlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right_dialog</item>
    </style>

    <style name="Theme.Lotty.Layout">
        <item name="android:background">@color/DarkBG</item>
    </style>

    <style name="Theme.Lotty.ImageView.Basic" parent="Theme.AppCompat">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Theme.Lotty.TextView.Button.Flat" parent="Theme.Lotty.TextView.Regular">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_darkbg_ripple</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Theme.Lotty.ImageButton.BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:src">@drawable/ic_back_24x24</item>
        <item name="android:background">@drawable/bg_darkbg_oval_ripple</item>
    </style>

    <style name="Theme.Lotty.ImageButton.TextClear" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_clear_16x16</item>
        <item name="android:tint">#999999</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="Theme.Lottiy.EditText.Search" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:drawableTint">#999999</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/bg_g700_rounded_8dp</item>
        <item name="android:drawableStart">@drawable/ic_search_12x12</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:lines">1</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Theme.Lottiy.TextView.Search" parent="Widget.AppCompat.TextView">
        <item name="android:drawableLeft">@drawable/ic_search_24x24</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@drawable/bg_g700_rounded_4dp_ripple</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    
    <style name="Theme.Lotty.Button.MyLocation" parent="Theme.Lotty.Button">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/R500</item>
        <item name="android:background">@drawable/bg_g700_rounded_4dp_ripple</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Theme.Lotty.TextView.ToolbarTitle" parent="Theme.Lotty.TextView.SemiBold">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Theme.Lotty.TextView.Drawer" parent="Theme.Lotty.TextView.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/G700</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:drawableRight">@drawable/selector_arrow_down_up</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.Lotty.TextView.Winner" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/bm_yeonsung</item>
        <item name="android:fontFamily">@font/bm_yeonsung</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:drawableLeft">@drawable/ic_medal_24x24</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Lotty.TextView.WinningNumber" parent="Theme.Lotty.TextView.SemiBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Theme.Lotty.ImageView.Logo" parent="Theme.AppCompat">
        <item name="android:src">@drawable/ic_splash_logo_dark</item>
    </style>

    <style name="Theme.Lotty.TextView.Dohyeon" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/bm_dohyeon</item>
        <item name="android:fontFamily">@font/bm_dohyeon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Lotty.View.DashLine" parent="Theme.AppCompat">
        <item name="android:background">@drawable/bg_dash_line</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Theme.Lotty.TextView.RandomNumber" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Theme.Lotty.Button.Draw" parent="Theme.Lotty.Button">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/bg_b500_rounded_10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Theme.Lotty.TextView.RecentItem" parent="Theme.Lotty.TextView.Regular">
        <item name="android:drawableLeft">@drawable/ic_clock_12x12</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:background">@drawable/bg_darkbg_ripple</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Theme.Lotty.ImageButton.Remove" parent="Theme.AppCompat">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@drawable/bg_darkbg_oval_ripple</item>
        <item name="android:padding">16dp</item>
        <item name="android:src">@drawable/ic_close_16x16</item>
    </style>

    <style name="Theme.Lotty.TextView.Clear" parent="Theme.Lotty.TextView.Regular">
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/bg_darkbg_ripple</item>
        <item name="android:padding">4dp</item>
        <item name="android:drawableLeft">@drawable/ic_clear_12x12</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="Theme.Lotty.Layout.Tint" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/G700</item>
    </style>

</resources>